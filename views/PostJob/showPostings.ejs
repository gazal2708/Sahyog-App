<% layout('layouts/boilerplate') %>
<div class="row">
<form action="/showPostings" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="id">Enter your User Id</label>
        <input class="form-control" type="text" id="id" name="id" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>
</div>